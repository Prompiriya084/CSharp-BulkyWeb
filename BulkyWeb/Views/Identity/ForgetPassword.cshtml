@{
    ViewData["Title"] = "Forget Password";
    Layout = "_IdentityLayout";
}
@section Links {
    @* <link href="~/css/_identitylayout.css" rel="stylesheet" /> *@
}
<div>
    <header class="identity-title">
        <h3>Test system.</h3>
    </header>
    <div class="card shadow-lg">
        <div class="card-body">
            <header>
                <h5>Forget Password.</h5>
            </header>
            <hr class="bottom-divider" />
            <div class="mb-3">
                <form class="needs-validation" novalidate>
                    <div class="d-flex justify-content-center flex-row flex-wrap">
                        <div class="form-floating shadow-sm m-1">
                            <input type="email" class="form-control" id="inpEmail" placeholder="" required />
                            <label for="floatingInput">Email</label>
                            <div class="invalid-feedback">Please enter an email.</div>
                        </div>
                        <div class="d-flex justify-content-center align-item-center m-1">
                            <button class="btn btn-primary shadow-lg" type="submit"><i class="fa-solid fa-paper-plane"></i> Send email</button>
                        </div>
                    </div>                   
                </form>
            </div>
            <div class="d-flex justify-content-between align-items-center" style="border-top: 1px solid #dee2e6;">
                <a href="../identity/signin">Sign in</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="module" src="~/js/identity/forgetpassword.js"></script>
}