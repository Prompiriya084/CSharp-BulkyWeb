@{
    ViewData["Title"] = "SignIn";
    Layout = "_IdentityLayout";
}
@section Links {
    @* <link href="~/css/_identitylayout.css" rel="stylesheet" /> *@
}
<div>
    <header class="identity-title">
        <h3>Test system</h3>
    </header>
    <div class="card shadow-lg">
        <div class="card-body">
            <header>
                <h5>Sign in.</h5>
            </header>
            <div class="mb-3">
                <form class="needs-validation" novalidate>
                    <div class="form-floating shadow-sm mb-3">
                        <input type="email" class="form-control" id="inpEmail" placeholder="" required />
                        <label for="floatingInput">Email</label>
                        <div class="invalid-feedback">Please enter an email.</div>
                    </div>
                    <div class="form-floating shadow-sm mb-3">
                        <input type="password" class="form-control" id="inpPassword" placeholder="" required />
                        <label for="floatingInput">Password</label>
                        <div class="invalid-feedback">Please enter an password.</div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-dark shadow-lg" type="submit"><i class="fas fa-arrow-right-to-bracket"></i> Login</button>
                    </div>
                </form>
            </div>            
            <div class="d-flex justify-content-between align-items-center" style="border-top: 1px solid #dee2e6;">
                <a href="../identity/forgetpassword">Forget password</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="module" src="~/js/identity/signin.js"></script>
}